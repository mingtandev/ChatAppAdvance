<link rel="stylesheet" href="/css/signin.css">;
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<div class="main">

    <%if(typeof error !='undefined'){ %>>
        <div class="alert alert-warning" role="alert">
            <%=error%>
          </div>
    <%}%>

    <%if(typeof valid !='undefined'){ %>>
        <div class="alert alert-success" role="alert">
            Register successfull
          </div>
    <%}%>

    <div class="container">
        <center>
            <div class="middle">
                <div id="login">

                    <form action="/registering" method="POST">

                        <fieldset class="clearfix">
                            <p><span class="fa fa-user"></span><input name="name" type="text" Placeholder="Your name" required></p>
                            <p><span class="fa fa-user"></span><input name="userName" type="text" Placeholder="Username" required></p>
                            <p><span class="fa fa-lock"></span><input  name="pass" type="password" Placeholder="Password" required></p>
                            <div>
                                <span style="width:48%; text-align:left;  display: inline-block;"><a class="submit"
                                        style="font-size: 15px;" href="/">Signin</a></span>
                                <span style="width:50%; text-align:right;  display: inline-block;"><input type="submit"
                                        value="Register"></span>
                            </div>

                        </fieldset>
                        <div class="clearfix"></div>
                    </form>

                    <div class="clearfix"></div>

                </div> <!-- end login -->
                <div class="logo">
                    <img src="/img/r2w.png" alt="">
                    <div class="clearfix"></div>
                </div>

            </div>
        </center>
    </div>

</div>